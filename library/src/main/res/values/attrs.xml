<resources>
    <declare-styleable name="AdBox">
        <attr name="adbox_effect" format="enum">
            <enum name="slideLeft"  value="0" />
            <enum name="slideRight" value="1" />
            <enum name="slideUp"    value="2" />
            <enum name="slideDown"  value="3" />
            <enum name="fade"       value="4" />
        </attr>

        <!-- duration of switching  images -->
        <attr name="adbox_duration" format="integer" />

        <!-- delay between slides -->
        <attr name="adbox_delay" format="integer" />

        <!-- loop -->
        <attr name="adbox_loop" format="boolean" />

        <!-- auto play -->
        <attr name="adbox_autoPlay" format="boolean" />

        <attr name="adbox_placeholder" format="reference" />



    </declare-styleable>
</resources>